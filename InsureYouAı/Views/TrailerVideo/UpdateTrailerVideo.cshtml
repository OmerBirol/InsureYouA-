@using InsureYouAıNew.Entities
@model TrailerVideo

@{
    ViewData["Title"] = "UpdateTrailerVideo";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}











<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni video düzenleme sayfası</h5>

        </div>
        <form method="post">

			<input type="hidden" asp-for="TrailerVideoId" />

            <label>Video Başlığı </label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />

            <label>Kapak fotosu </label>
            <input type="text" asp-for="CoverImageUrl" class="form-control" />
            <br />

            <label>Video youtube embed Url </label>
            <input type="text" asp-for="VideoUrl" class="form-control" />
            <br />
            <button class="btn btn-primary">Videoyu kaydet</button>
        </form>
    </div>
</div>









