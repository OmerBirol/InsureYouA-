@using InsureYouAıNew.Entities
@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}









<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni referans yorum  güncelleme sayfası</h5>

        </div>
        <form method="post">
			<input type="hidden" asp-for="TestimonialId" />
            <label>AD SOYAD</label>
            <input type="text" asp-for="NameSurname" class="form-control" />
            <br />

            <label>Unvan </label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />

            <label>Yorum </label>
            <input type="text" asp-for="CommentDetail" class="form-control" />
            <br />

            <label>GörselUrl </label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br />
            <button class="btn btn-success">Referansı kaydet</button>
        </form>
    </div>
</div>






