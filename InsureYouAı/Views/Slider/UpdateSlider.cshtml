@using InsureYouAıNew.Entities
@model Slider

@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0">Yeni slider güncelleme sayfası</h5>

        </div>
        <form method="post">
			<input type="hidden" asp-for="SliderId" />
            <label>Slider başlığı</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />

            <label>Açıklama </label>
            <input type="email" asp-for="Description" class="form-control" />
            <br />

            <label>GörselUrl </label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br />
            <button class="btn btn-success">Sliderı kaydet</button>
        </form>
    </div>
</div>




