@model Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}






<div class="card">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h5 class="mb-0"> iletişim bilgisi güncelleme sayfası</h5>

        </div>
        <form method="post">
			<input type="hidden" asp-for="ContactId" />
            <label>Telefon no</label>
            <input type="tel " asp-for="Phone" class="form-control" />
            <br />

            <label>Email adresi</label>
            <input type="email" asp-for="Email" class="form-control" />
            <br />

            <label>Adres bilgisi</label>
            <input type="text" asp-for="Address" class="form-control" />
            <br />
            <label>Açıklama</label>
            <textarea rows="3" class="form-control" asp-for="Description"></textarea>
            <br />
            <button class="btn btn-success">Bilgileri kaydet</button>
        </form>
    </div>
</div>


